<h1 class="title">Category List</h1>
<%= link_to 'Create category', new_admin_category_path, class: "button is-primary is-small" %>
<article class="message">
  <div class="message-body">Reminder: You can draw and drop the categories.</div>
</article>
<table class="table is-fullwidth has-shadowed">
  <thead>
    <th>名稱</th>
    <th></th>
  </thead>
  <tbody class="sortable-items">
    <% @categories.each do |category| %>
      <tr class="item" data-item="<%= dom_id(category) %>">
        <td>
          <i class="fas fa-grip-vertical"></i>
          <%= link_to category.name, edit_admin_category_path(category) %>
        </td>
        <td>
          <%= link_to 'Delete', admin_category_path(category), method: :delete,
                                                               data: { confirm: 'Wanna delete it?' },
                                                               class: "button is-danger is-small" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
